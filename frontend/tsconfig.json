{
   "compilerOptions": {
      "target": "ESNext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/src/*": ["./src/*"],
         "@/reduxStore/*": ["./src/utils/redux/*"],
         "@/components/*": ["./src/components/*"],
         "@/Base/*": ["./src/components/Base/*"],
         "@/assets/*": ["./src/assets/*"],
         "@/types/*": ["./src/types/*"],
         "@/utils/*": ["./src/utils/*"],
         "@/hooks/*": ["./src/hooks/*"],
         "@/styles/*": ["./src/styles/*"],
         "@/axios/*": ["./src/utils/axiosSetup/*"],
         "@/PostContext/*": ["./src/components/MainPage/Context/*"],
         "@/CommentContext/*": ["./src/components/Posts/SinglePost/SingleComment/Context/Comment/*"],
         "@/AnswersContext/*": ["./src/components/Posts/SinglePost/SingleComment/Context/Answers/*"],
         "@/AllCommentContext/*": ["./src/components/Posts/Context/*"],
         "@/Skeletons/*": ["./src/skeletons/*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
